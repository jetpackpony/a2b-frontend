{{nav-bar menuOpen=menuOpen}}
<div class="container-fluid">
  {{outlet}}
</div>

<div class="modal fade" id="error-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" aria-label="Close" {{action 'closeError'}}>
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Error occured</h4>
      </div>
      <div class="modal-body">
        {{#if error}}
          <p>We encountered a server error. Sorry about that! Please let us know.</p>
          <small>
            <p>{{error.message}}</p>
            <ul>
              {{#each error.errors as |e|}}
                <li>{{e.detail}}</li>
              {{/each}}
            </ul>
          </small>
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" {{action 'closeError'}}>Close</button>
      </div>
    </div>
  </div>
</div>
