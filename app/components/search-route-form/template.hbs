<form class="form-inline" {{ action "search" on="submit" }}>
  {{#if inline}}
    <div class="form-group">
      <label class="sr-only" for="from">From City</label>
      <input type="text" value={{from}} class="form-control form-control" id="from" placeholder="Bangkok, Thailand">
    </div>
    <div class="form-group">
      <label class="sr-only" for="to">To City</label>
      <input type="text" value={{to}} class="form-control form-control" id="to" placeholder="Phuket, Thailand">
    </div>
    <button id="submit" type="submit" class="btn btn-secondary">Search</button>
  {{else}}
    <p class="lead">
    <div class="form-group">
      <label class="sr-only" for="from">From City</label>
      <input type="text" value={{from}} class="form-control form-control-lg" id="from" placeholder="Bangkok, Thailand">
    </div>
    <div class="form-group">
      <label class="sr-only" for="to">To City</label>
      <input type="text" value={{to}} class="form-control form-control-lg" id="to" placeholder="Phuket, Thailand">
    </div>
    </p>
    <p>
    <button id="submit" type="submit" class="btn btn-lg btn-secondary">Search</button>
    </p>
  {{/if}}
</form>
