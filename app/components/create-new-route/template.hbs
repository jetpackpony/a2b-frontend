<div class="left-side">
  <div class="add-route">
    <div class="header">
      <h1>
        Adding a route
        <small class="text-muted">
          {{#if complete}}
            Complete
          {{else}}
            Step {{currentStep}} of 3
          {{/if}}
        </small>
      </h1>
    </div>
    <div class="carousel slide">
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <div class="alert alert-warning">
            At the moment you can only add routes in 11 countries in South-East Asia: Vietnam, Cambodia, Laos, Myanmar, Thailand, Malaysia, Brunei, East Timor, Indonesia, Singapore, Philippines
          </div>
          {{create-new-route-choose-location
          mapFocusObject=mapFocusObject
          countryLabel="Choose country of origin"
          cityLabel="Choose city of origin"
          addressLabel="Point the departure address on the map"
          subAddressLabel="I don't know the exact departure address!"
          commentLabel="Describe the departure location please"
          city=newRoute.fromCity
          addressObject=fromAddressObject
          address=newRoute.fromAddress
          coords=newRoute.fromCoords
          comment=newRoute.fromComment
          showBackButton=false
          next=(action "next")
          back=(action "back")
          }}
        </div>
        <div class="carousel-item">
          {{create-new-route-choose-location
          mapFocusObject=mapFocusObject
          countryLabel="Choose country of destination"
          cityLabel="Choose city of destination"
          addressLabel="Point the arrival address on the map"
          subAddressLabel="I don't know the exact arrival address!"
          commentLabel="Describe the arrival location please"
          city=newRoute.toCity
          addressObject=toAddressObject
          address=newRoute.toAddress
          coords=newRoute.toCoords
          comment=newRoute.toComment
          showBackButton=true
          next=(action "next")
          back=(action "back")
          }}
        </div>
        <div class="carousel-item">
          {{create-new-route-details
          newRoute=newRoute
          submit=(action "submit")
          back=(action "back")
          }}
        </div>
        <div class="carousel-item">
          {{create-new-route-thanks errorMessage=errorMessage}}
        </div>
      </div>
    </div>
  </div>
</div>
<div class="right-side">
  {{create-new-route-map
      mapFocusObject=mapFocusObject
      fromCity=newRoute.fromCity
      fromAddressObject=fromAddressObject
      fromAddress=newRoute.fromAddress
      fromCoords=newRoute.fromCoords
      toCity=newRoute.toCity
      toAddressObject=toAddressObject
      toAddress=newRoute.toAddress
      toCoords=newRoute.toCoords
      formPosition=formPosition
  }}
</div>
