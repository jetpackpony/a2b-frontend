<div class="col-xs-6">
  <div class="carousel slide">
    <div class="carousel-inner" role="listbox">
      <div class="carousel-item active">
        {{create-new-route-choose-location
        mapFocusObject=mapFocusObject
        countryHeader="Choose a country of origin"
        cityHeader="Enter city of origin"
        city=newRoute.fromCity
        addressObject=fromAddressObject
        address=newRoute.fromAddress
        coords=newRoute.fromCoords
        comment=newRoute.fromComment
        next=(action "next")
        }}
      </div>
      <div class="carousel-item">
        {{create-new-route-choose-location
        mapFocusObject=mapFocusObject
        countryHeader="Choose a country of destination"
        cityHeader="Enter city of destination"
        city=newRoute.toCity
        addressObject=toAddressObject
        address=newRoute.toAddress
        coords=newRoute.toCoords
        comment=newRoute.toComment
        next=(action "next")
        }}
      </div>
      <div class="carousel-item">
        {{create-new-route-details
        newRoute=newRoute
        submit=(action "submit")
        }}
      </div>
    </div>
  </div>
  {{#if showBackButton}}
    <button {{action "back"}}>Back</button>
  {{/if}}

</div>
<div class="col-xs-6">
  {{create-new-route-map
      mapFocusObject=mapFocusObject
      fromCity=newRoute.fromCity
      fromAddressObject=fromAddressObject
      fromAddress=newRoute.fromAddress
      fromCoords=newRoute.fromCoords
      toCity=newRoute.toCity
      toAddressObject=toAddressObject
      toAddress=newRoute.toAddress
      toCoords=newRoute.toCoords
      formPosition=formPosition
  }}
</div>
