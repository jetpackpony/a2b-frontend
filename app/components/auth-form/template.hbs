<form {{action "submitForm" on="submit"}}>
  <div class="form-group {{if errors.email 'has-danger'}}">
    <label class="sr-only" for="email">Email address</label>
    {{input
    type="email"
    class=(if errors.email 'form-control form-control-danger' 'form-control')
    id="email" placeholder="Enter email" value=user.email}}
    {{#if errors.email}}
      <div class="form-control-feedback">Please enter a valid email.</div>
    {{/if}}
  </div>
  <div class="form-group {{if errors.password 'has-danger'}}">
    <label class="sr-only" for="password">Password</label>
    {{input
    type="password"
    class=(if errors.password 'form-control form-control-danger' 'form-control')
    id="password" placeholder="Enter password" value=user.password}}
    {{#if errors.password}}
      <div class="form-control-feedback">Password should be at least 4 symbols</div>
    {{/if}}
  </div>

  {{#if isRegisterForm}}
    <div class="form-group {{if errors.passwordConfirm 'has-danger'}}">
      <label class="sr-only" for="confirm-password">Confirm password</label>
      {{input
      type="password"
      class=(if errors.passwordConfirm 'form-control form-control-danger' 'form-control')
      id="passwordConfirm"
      placeholder="Confirm password"
      value=user.passwordConfirm}}
      {{#if errors.passwordConfirm}}
        <div class="form-control-feedback">Passwords don't match</div>
      {{/if}}
    </div>
  {{/if}}
  <button type="submit" class="btn btn-secondary">{{if isRegisterForm 'Join' 'Log in'}}</button>
</form>
