<div class="form-group row">
  <label for="transportType" class="col-xs-3 col-form-label">Transport Type <span class='required'>*</span></label>
  <div class="col-xs-9">
    <select class="form-control" {{action "transportTypeChanged" on="change"}}>
      <option value="" disabled selected>---</option>
      {{#each transportTypes as |type|}}
        <option value="{{type}}">{{type}}</option>
      {{/each}}
    </select>
  </div>
</div>
<div class="form-group row">
  <label for="organization" class="col-xs-3 col-form-label">Transport Company <span class='required'>*</span></label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="Somethign Tour" id="organization" value=newRoute.organization}}
  </div>
</div>
<div class="form-group row">
  <label for="organization-info" class="col-xs-3 col-form-label">Transport Company Contacts</label>
  <div class="col-xs-9">
    {{textarea class="form-control" placeholder="Add company's website, phone or other contacts" id="organization-info" value=newRoute.companyDescription}}
  </div>
</div>
<div class="form-group row">
  <label for="duration" class="col-xs-3 col-form-label">Duration <span class='required'>*</span></label>
  <div class="col-xs-9">
    {{input type="number" class="form-control" placeholder="0" id="duration-hours" focus-out="durationChanged" min=0 max=72 step=1}} hours
    {{input type="number" class="form-control" placeholder="0" id="duration-minutes" focus-out="durationChanged" min=0 max=60 step=15}} minutes
  </div>
</div>
<div class="form-group row">
  <label for="price" class="col-xs-3 col-form-label">Price <span class='required'>*</span></label>
  <div class="col-xs-9">
    <div class="input-group">
      <div class="input-group-addon">$</div>
      {{input type="number" class="form-control" placeholder="33.55" id="price" value=newRoute.price}}
    </div>
  </div>
</div>
<div class="form-group row">
  <label for="timetable" class="col-xs-3 col-form-label">Timetable <span class='required'>*</span></label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="7:00 AM" id="timetable" value=newRoute.timetable}}
  </div>
</div>
<div class="form-group row">
  <label for="description" class="col-xs-3 col-form-label">Description</label>
  <div class="col-xs-9">
    {{textarea class="form-control" placeholder="Comfortable VIP Van, TV, Wi-fi, Water, polite drivers" id="description" value=newRoute.description}}
  </div>
</div>
{{#if showSubmitButton}}
  <button {{action "submit"}} class="btn btn-secondary">Submit</button>
{{/if}}
