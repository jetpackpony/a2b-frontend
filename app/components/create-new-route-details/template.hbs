<div class="form-group row">
  <label for="transportType" class="col-xs-3 col-form-label">Transport Type</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="bus" id="transportType" value=newRoute.transportType}}
  </div>
</div>
<div class="form-group row">
  <label for="organization" class="col-xs-3 col-form-label">Organization</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="Somethign Tour" id="organization" value=newRoute.organization}}
  </div>
</div>
<div class="form-group row">
  <label for="description" class="col-xs-3 col-form-label">Description</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="Tell us somethig about this route" id="description" value=newRoute.description}}
  </div>
</div>
<div class="form-group row">
  <label for="duration" class="col-xs-3 col-form-label">Duration</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="3.25" id="duration" value=newRoute.duration}}
  </div>
</div>
<div class="form-group row">
  <label for="price" class="col-xs-3 col-form-label">Price</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="33.55" id="price" value=newRoute.price}}
  </div>
</div>
<div class="form-group row">
  <label for="timetable" class="col-xs-3 col-form-label">Timetable</label>
  <div class="col-xs-9">
    {{input class="form-control" placeholder="7:00 AM" id="timetable" value=newRoute.timetable}}
  </div>
</div>

<button {{action "submit"}} class="btn btn-secondary">Submit</button>
