<div class="itinerary-short" id="itinerary-{{itinerary.id}}">
  <div class="row">
    <div class="col-xs-8 company-name">
      <h2>{{itinerary.organizations}}</h2>
    </div>
    <div class="col-xs-4 price">${{itinerary.price}}</div>
  </div>
  <div class="row info">
    <div class="col-xs-8">
      <div class="transport">{{itinerary.transport}}</div>
      <div class="stops">
        {{#if itinerary.stops}}
          {{itinerary.stops}} {{pluralize itinerary.stops "stop"}}
        {{else}}
          direct
        {{/if}}
      </div>
    </div>
    <div class="col-xs-4 duration">{{duration-string itinerary.duration}}</div>
  </div>
</div>

{{#if expanded}}
  <div class="route-list">
    {{#each itinerary.routes as |route|}}
      <div class="route-item" id="route-{{route.id}}" {{action "routeHovered" route on="mouseEnter"}} {{action "routeClicked" route on="click"}}>
        <div class="path">
          <span>&nbsp;</span>
        </div>
        <div class="route-container">
          <div class="route-short">
            <div class="row">
              <div class="col-xs-8 company-name">
                <h2>{{route.organization}}</h2>
              </div>
              <div class="col-xs-4 price">${{route.price}}</div>
            </div>
            <div class="row cities">
              <div class="col-xs-8">{{route.cities}}</div>
            </div>
            <div class="row info">
              <div class="col-xs-8 transport">{{route.transportType}}</div>
              <div class="col-xs-4 duration">{{duration-string route.duration}}</div>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
