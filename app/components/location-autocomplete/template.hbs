<div class="input-wrapper">
  {{input
  classNames="form-control"
  value=value
  autocomplete="off"
  spellcheck=false
  input=(action 'handleInput')
  focusIn=(action 'focusInput')
  focusOut=(action 'blurInput')
  placeholder=placeholder
  }}
  <div class="input-button" {{action 'clear' on='click'}}>&times;</div>
</div>
  <div class="suggestions">
    <ul>
      {{#if isLoading}}
        <li class="loader">
          loadin...
        </li>
      {{else}}
        {{#if showSuggestions}}
          {{#each suggestions as |sugg index|}}
            <li {{action 'selectSuggestion' sugg on="click"}}>
              <a tabindex='-1' href="#!" data-index={{index}}>{{sugg.name}}</a>
            </li>
          {{else}}
            <li class="disabled">
              <a tabindex='-1'>Nothing found</a>
            </li>
          {{/each}}
        {{/if}}
      {{/if}}
    </ul>
  </div>
